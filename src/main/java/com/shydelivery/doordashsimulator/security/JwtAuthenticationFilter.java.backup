package com.shydelivery.doordashsimulator.security;

import com.nimbusds.jwt.SignedJWT;
import com.shydelivery.doordashsimulator.entity.User;
import com.shydelivery.doordashsimulator.repository.UserRepository;
import jakarta.servlet.FilterChain;
import jakarta.servlet.ServletException;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import lombok.extern.slf4j.Slf4j;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.authentication.UsernamePasswordAuthenticationToken;
import org.springframework.security.core.GrantedAuthority;
import org.springframework.security.core.authority.SimpleGrantedAuthority;
import org.springframework.security.core.context.SecurityContextHolder;
import org.springframework.security.web.authentication.WebAuthenticationDetailsSource;
import org.springframework.stereotype.Component;
import org.springframework.util.StringUtils;
import org.springframework.web.filter.OncePerRequestFilter;

import java.io.IOException;
import java.util.Collections;
import java.util.List;

/**
 * JWT 认证过滤器
 * 
 * 在每个 HTTP 请求前执行，负责：
 * 1. 从 Authorization Header 提取 JWT Token
 * 2. 验证 Token 的有效性
 * 3. 提取用户信息（email, role）
 * 4. 从数据库获取用户的最新角色
 * 5. 设置 Spring Security 的 SecurityContext
 */
@Component
@Slf4j
public class JwtAuthenticationFilter extends OncePerRequestFilter {
    
    @Autowired
    private CognitoJwtValidator jwtValidator;
    
    @Autowired
    private UserRepository userRepository;
    
    @Override
    protected void doFilterInternal(
            HttpServletRequest request,
            HttpServletResponse response,
            FilterChain filterChain
    ) throws ServletException, IOException {
        
        try {
            // 1. 从请求中提取 JWT Token
            String token = extractTokenFromRequest(request);
            
            if (token != null && !token.isEmpty()) {
                log.debug("Found JWT token in request");
                
                // 2. 验证 Token
                SignedJWT signedJWT = jwtValidator.validateToken(token);
                
                // 3. 提取用户信息
                String cognitoSub = jwtValidator.extractCognitoSub(signedJWT);
                String email = jwtValidator.extractEmail(signedJWT);
                String role = jwtValidator.extractRole(signedJWT);
                
                log.debug("Token validated for user: {} ({}), role: {}", email, cognitoSub, role);
                
                // 4. 创建 Spring Security 的 Authentication 对象
                if (email != null) {
                    // 从数据库获取用户的最新角色（而不是依赖 Token）
                    User user = userRepository.findByEmail(email).orElse(null);
                    
                    List<GrantedAuthority> authorities;
                    if (user != null && user.getRole() != null) {
                        // 使用数据库中的角色
                        authorities = Collections.singletonList(
                                new SimpleGrantedAuthority("ROLE_" + user.getRole().name())
                        );
                        log.debug("User {} has role: {} from database", email, user.getRole());
                    } else if (role != null && !role.isEmpty()) {
                        // 后备方案：使用 Token 中的角色
                        authorities = Collections.singletonList(
                                new SimpleGrantedAuthority("ROLE_" + role)
                        );
                        log.debug("User {} has role: {} from token", email, role);
                    } else {
                        // 默认权限
                        authorities = Collections.singletonList(
                                new SimpleGrantedAuthority("ROLE_USER")
                        );
                        log.warn("Token and database missing role for user: {}, using default ROLE_USER", email);
                    }
                    
                    // 创建 Authentication 对象
                    UsernamePasswordAuthenticationToken authentication =
                            new UsernamePasswordAuthenticationToken(
                                    email,      // Principal (用户标识)
                                    null,       // Credentials (凭证，不需要)
                                    authorities // Authorities (权限列表)
                            );
                    
                    // 设置请求详情
                    authentication.setDetails(new WebAuthenticationDetailsSource().buildDetails(request));
                    
                    // 5. 将 Authentication 设置到 SecurityContext
                    SecurityContextHolder.getContext().setAuthentication(authentication);
                    
                    log.debug("User authenticated: {} with authorities: {}", email, authorities);
                } else {
                    log.warn("Token missing email or role claims");
                }
            } else {
                log.debug("No JWT token found in request to: {}", request.getRequestURI());
            }
            
        } catch (Exception e) {
            // Token 验证失败，记录日志但不抛出异常
            // 让请求继续，由 Spring Security 根据配置决定是否拒绝
            log.error("JWT authentication failed: {}", e.getMessage());
            
            // 清空 SecurityContext
            SecurityContextHolder.clearContext();
        }
        
        // 6. 继续过滤器链
        filterChain.doFilter(request, response);
    }
    
    /**
     * 从 HTTP 请求中提取 JWT Token
     * 
     * Token 应该在 Authorization Header 中，格式为：Bearer {token}
     */
    private String extractTokenFromRequest(HttpServletRequest request) {
        String bearerToken = request.getHeader("Authorization");
        
        if (StringUtils.hasText(bearerToken) && bearerToken.startsWith("Bearer ")) {
            // 去掉 "Bearer " 前缀，返回纯 Token
            return bearerToken.substring(7);
        }
        
        return null;
    }
    
    /**
     * 判断是否应该跳过某些请求（例如公开接口）
     * 
     * 可以在这里配置不需要 JWT 验证的路径
     */
    @Override
    protected boolean shouldNotFilter(HttpServletRequest request) throws ServletException {
        String path = request.getRequestURI();
        
        // 这些路径不需要 JWT 验证
        return path.startsWith("/api/auth/login") ||
               path.startsWith("/api/auth/register") ||
               path.startsWith("/api/users") ||  // 注册接口
               path.equals("/api/error") ||
               path.startsWith("/api/actuator/health") ||
               path.startsWith("/swagger-ui") ||
               path.startsWith("/api-docs");
    }
}
